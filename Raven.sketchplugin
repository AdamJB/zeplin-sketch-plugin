var path = NSTemporaryDirectory().stringByAppendingPathComponent("project.json");
    content = NSString.stringWithString(JSON.stringify(project/*, null, 4*/));
    success = [content writeToFile:path
                        atomically:false
                          encoding:NSUTF8StringEncoding
                             error:null];

